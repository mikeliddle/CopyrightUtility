<?xml version="1.0" encoding="utf-8"?>

<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>

  <log4net>
    <root>
      <level value="DEBUG" />
      <appender-ref ref="FileAppender" />
      <appender-ref ref="ConsoleAppender" />
    </root>
    <appender name="FileAppender" type="log4net.Appender.FileAppender">
      <file value="/path/log-file.txt" />
      <appendToFile value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <header value="[Header]&#13;&#10;" />
        <footer value="[Footer]&#13;&#10;" />
        <conversionPattern value="%date [%thread] %-5level %logger [%ndc] &lt;%property{auth}&gt; - %message%newline" />
      </layout>
    </appender>
  </log4net>

  <copyrightfile filepath="/path/copyright.txt" />
  <Log filepath="/path/updatelog.txt" />
  <directorylist>
    <directory path="/path/repository" />
    <directory path="/path/repository1" />
    <directory path="/path/repository2" />
  </directorylist>

  <filetypes>
    <extension comment="//" endComment="//" file="*.c" />
    <extension comment="//" endComment="//" file="*.h" />
    <extension comment="//" endComment="//" file="*.cpp" />
    <extension comment="//" endComment="//" file="*.cxx" />
    <extension comment="//" endComment="//" file="*.hpp" />
    <extension comment="//" endComment="//" file="*.hxx" />
    <extension comment="//" endComment="//" file="*.js" />
    <extension comment="//" endComment="//" file="*.jsp" />
    <extension comment="//" endComment="//" file="*.m" />
    <extension comment="&lt;!--" endComment="--&gt;" file="*.php" />
    <extension comment="#" endComment="#" file="*.sql" />
    <extension comment="//" endComment="//" file="*.cs" />
    <extension comment="//" endComment="//" file="*.cls" />
    <extension comment="//" endComment="//" file="*.cc" />
    <extension comment="//" endComment="//" file="*.cbp" />
    <extension comment="&lt;!--" endComment="--&gt;" file="*.html" />
    <extension comment="&lt;!--" endComment="--&gt;" file="*.htm" />
    <extension comment="&lt;!--" endComment="--&gt;" file="*.xml" />
    <extension comment="&lt;!--" endComment="--&gt;" file="*.html5" />
    <extension comment="&lt;!--" endComment="--&gt;" file="*.csproj" />
    <extension comment="//" endComment="//" file="*.java" />
    <extension comment="$" endComment="$" file="*.rb" />
    <extension comment="# " endComment=" #" file="*.sh" />
    <extension comment="'" endComment="'" file="*.vb" />
  </filetypes>

</configuration>